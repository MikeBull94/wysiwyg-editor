{
  "name": "wysiwyg-editor",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist/*",
    "check-updates": "ncu",
    "update-dependencies": "ncu --upgrade && npm install",
    "build:js": "browserify ./lib/index.jsx -o ./dist/editor.js -t [ babelify --presets [ es2015 react stage-0 ] ]",
    "watch:js": "nodemon --ext jsx,jsx --watch lib --exec \"npm run build:js\"",
    "dist:js": "uglifyjs dist/editor.js --comments --compress --mangle --output dist/editor.min.js",
    "build:css": "node-sass --output-style expanded --importer node_modules/node-sass-import style/index.scss dist/editor.css",
    "watch:css": "nodemon --ext scss --watch style --exec \"npm run build:css\"",
    "dist:css": "postcss --use cssnano --no-cssnano.autoprefixer --output dist/editor.min.css dist/editor.css",
    "watch": "concurrently --kill-others \"npm run watch:js\" \"npm run watch:css\"",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "dist": "npm run clean && npm run build && npm run dist:js && npm run dist:css",
    "start": "browser-sync start --server --index dev.html --files dist"
  },
  "dependencies": {
    "font-awesome": "4.6.3",
    "react": "15.3.1",
    "react-dom": "15.3.1",
    "slate": "0.13.6",
    "slate-auto-replace": "0.1.0",
    "slate-auto-replace-text": "0.3.1",
    "slate-edit-code": "0.3.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "babelify": "7.3.0",
    "browser-sync": "2.15.0",
    "browserify": "13.1.0",
    "concurrently": "2.2.0",
    "cssnano": "3.7.4",
    "node-sass": "3.9.3",
    "node-sass-import": "1.0.5",
    "nodemon": "1.10.2",
    "npm-check-updates": "2.8.0",
    "postcss-cli": "2.6.0",
    "uglify-js": "2.7.3"
  }
}
